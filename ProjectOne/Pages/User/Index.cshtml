@page
@model ProjectFuse.Pages.User.UserModel
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center">Информация о пользователях</h1>

<div class="bd-example rounded-4">
    <table class="table table-striped table-hover table-bordered shadow rounded-4">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">ФИО</th>
            <th scope="col">Наличие лицензии</th>
            <th scope="col">Штамп безопасности</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var user in Model.Users)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName @user.MiddleName</td>
                <td>@user.HasWeaponLicence.ToString()<td>
                <td>@user.SecurityStamp</td>
            </tr>
        }

        </tbody>

    </table>
</div>