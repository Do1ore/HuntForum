@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectFuse.Models.Forum.Topic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Создайте свою тему для обсуждения!</h2>
<div class="mt-3">
<form method="post" asp-action="CreateTopic">
    <img class="mb-4" src="/img/logo.png" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Создание темы</h1>

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingTitle" name="Title" placeholder="Название темы">
        <label for="floatingTitle">Название темы</label>
    </div>
    <div class="form-floating mv-3">
        <textarea class="form-control" id="floatingContent" name="Content" placeholder="Содержание темы" style="height: 150px;"></textarea>
        <label for="floatingContent">Содержание темы</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Создать тему</button>
    <p class="mt-5 mb-3 text-muted">© 2024</p>
</form>
</div>