@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectFuse.ViewModels.News.NewsViewModel
@{
    ViewData["Title"] = "Главная страница";
    ViewBag.Secondary = "Онлайн магазин товаров";
    int counter = 0;
}

<style>
    .back{
    object-fit:cover;
    border-radius: 20px;
    max-height: 50dvh; 
    }
    
</style>

<div class="text-center ">
    <div class="text-shadow">
        <h1 class="display-2 mb-2">Запал</h1>
        <p class="lead mb-3">
            Это современный интернет-магазин, специализирующийся
            на продаже самых лучших ружей для охоты и спортивных дисциплин.
            Мы предлагаем широкий ассортимент от лучших мировых брендов.
            Наш магазин гарантирует высокое качество продукции,
            быструю доставку и превосходное обслуживание клиентов.
        </p>
    </div>
</div>
<div class="row text-center">
    <div class="col-4">
        <img src="/img/images/guns1.jpg" class="back img-fluid shadow-sm" alt="abstract1"/>
    </div>

    <div class="col-4">
        <img src="/img/images/hunt1.jpg" class="back img-fluid shadow-sm" alt="abstract1"/>
    </div>
    <div class="col-4">
        <img src="/img/images/hunt2.jpg" class="back img-fluid shadow-sm" alt="abstract1"/>
    </div>

</div>




@if (@Model.Articles is not null)
{
    <div class="my-5 text-center">
       <h1 class="display-2 mb-2">Новости</h1>
    </div>

    <div class="row row-cols-3 g-3 mb-4">
        @foreach (var item in Model.Articles)
        {
            if (counter >= 6) break;
            counter++;
            <div class="col">
                <div class="card h-100 border-2 rounded-4 border-white shadow-sm">
                    <div class="card-body rounded-4" style="background-color: whitesmoke; display: flex; flex-direction: column; justify-content: space-between; align-items: flex-start;">
                        <h5 class="card-title md-2" style="font-size: calc(0.8vw + 7px); align-self: flex-start; text-align: start">@item?.Title</h5>
                        <p class="card-text" style="font-size: calc(0.4dvw + 10px); align-self: flex-start;">
                            <small class="text-muted">Источик: </small>@item?.Source.Name
                        </p>
                        <p class="card-text" style="font-size: calc(0.4dvw + 10px)">
                            <small class="text-muted">
                                Опубликовано:
                            </small>
                            @item?.PublishedAt
                        </p>

                        <a asp-action="NewsDetails" asp-route-title="@item?.Title"
                           class="btn btn-primary bg-overlay1 border-0 w-100">
                            <span style="font-size: calc(0.6vw + 7px);">Читать подробнее</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}


<div class=""></div>